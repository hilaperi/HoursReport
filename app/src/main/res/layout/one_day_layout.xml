<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.reports.DatePickerFragment"
    android:orientation="vertical"
    android:background="@color/white"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/dateNumber"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:text="date"
        android:textSize="150dp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/one_date_picker_kindOfWork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/work_day"
        android:textSize="20dp"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:context=".ui.reports.DatePickerFragment">



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:context=".ui.reports.DatePickerFragment">
        <TextView
            android:id="@+id/one_date_pickerd_totalHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total"
            android:textSize="15dp"
            android:layout_marginStart="150dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/One_date_picker_editTotalHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="0H"
            android:textColor="@color/black"
            android:textSize="15dp" />
    </LinearLayout>



</LinearLayout>